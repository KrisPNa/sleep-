<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:contentDescription="Карточка сериала"
    app:cardCornerRadius="@dimen/corner_radius_medium"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/background_white"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium">

        <!-- Изображение сериала -->
        <ImageView
            android:id="@+id/seriesImageView"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@color/background_gray"
            android:contentDescription="Постер сериала"
            android:layout_marginEnd="@dimen/margin_medium" />

        <!-- Информация о сериале -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Название -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название сериала"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Статус и просмотр в одной строке -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <!-- Статус сериала -->
                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Смотрю"
                    android:textSize="11sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"
                    android:background="@color/status_planned"
                    android:layout_marginEnd="6dp" />



            </LinearLayout>

            <!-- Заметки -->
            <TextView
                android:id="@+id/notesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заметки..."
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Кнопка избранного -->
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_star_border_24"
            android:contentDescription="Добавить в избранное"
            android:tint="@color/primary_blue" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
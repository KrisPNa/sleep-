<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Настройки резервного копирования"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Автоматический бэкап -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Автоматический бэкап"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

            <Switch
                android:id="@+id/auto_backup_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Карточка с информацией -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?android:attr/colorBackgroundFloating">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Информация о последнем бэкапе -->
                <TextView
                    android:id="@+id/last_backup_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Последний бэкап: не создан"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <!-- Информация о папке бэкапов -->
                <TextView
                    android:id="@+id/backup_location_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Папка бэкапов: "
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Кнопка создания бэкапа -->
        <Button
            android:id="@+id/create_backup_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="Создать резервную копию"
            android:textAllCaps="false"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="?android:attr/colorAccent"
            app:strokeWidth="1dp" />

        <!-- Кнопка восстановления -->
        <Button
            android:id="@+id/restore_backup_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:text="Восстановить из резервной копии"
            android:textAllCaps="false"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="?android:attr/colorAccent"
            app:strokeWidth="1dp" />

        <!-- Прогресс бар (скрытый по умолчанию) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Информационный раздел -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?android:attr/colorBackgroundFloating">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Информация"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Резервные копии сохраняются в папку приложения на устройстве"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Для Android 10+ разрешения на хранилище не требуются"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Для сохранения копий в облаке используйте встроенную систему бэкапов Android"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.screens.ManageCollectionsScreen">

    <!-- Заголовок с кнопкой назад -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingTop="3dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Назад" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Управление коллекциями"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/primary_blue" />


    </LinearLayout>

    <!-- Счетчик коллекций -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Всего коллекций:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark" />

        <TextView
            android:id="@+id/collectionsCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/counter_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Сообщение при отсутствии коллекций -->
    <TextView
        android:id="@+id/noCollectionsTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Коллекций пока нет.\nСоздайте первую коллекцию на главном экране."
        android:textSize="18sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="50dp" />

    <!-- Список коллекций -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="24dp" />

</LinearLayout>
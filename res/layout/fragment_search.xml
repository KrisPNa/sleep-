<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Верхняя панель с поиском -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/background_white"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Поле поиска с кнопками -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:gravity="center_vertical">

                <!-- Кнопка назад -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:tint="@color/text_gray"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:contentDescription="Назад" />

                <!-- Поле поиска -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_search_24"
                        android:tint="@color/text_gray"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Поиск коллекций и сериалов..."
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:padding="0dp" />

                    <ImageView
                        android:id="@+id/clearSearchButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_close_24"
                        android:tint="@color/text_gray"
                        android:visibility="gone"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Кнопка меню фильтрации -->
                <ImageButton
                    android:id="@+id/filterMenuButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_filter_list_24"
                    android:tint="@color/text_gray"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:contentDescription="Фильтрация" />

            </LinearLayout>

            <!-- Текущий фильтр -->
            <TextView
                android:id="@+id/currentFilterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фильтр: Все"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="8dp"
                android:paddingLeft="48dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Результаты поиска -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Сериалы -->
            <TextView
                android:id="@+id/seriesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сериалы"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/seriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Коллекции -->
            <TextView
                android:id="@+id/collectionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Коллекции"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/collectionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Нет результатов -->
            <TextView
                android:id="@+id/noResultsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите запрос для поиска"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
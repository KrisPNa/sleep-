<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:paddingBottom="80dp"
    tools:context=".ui.screens.EditSeriesScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="@android:color/transparent"
                android:contentDescription="Кнопка назад" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Редактирование сериала"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Основная информация -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Основная информация:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/titleEditText"
            style="@style/Widget.App.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:hint="Название сериала *"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp" />

        <!-- Статус и Избранное -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- MaterialAutoCompleteTextView -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/statusLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/primary_blue"
                app:startIconDrawable="@drawable/ic_baseline_info_24"
                android:hint="Статус">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/statusSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:minHeight="48dp"
                    android:focusable="false"
                    android:clickable="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/favoriteCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Избранное"
                android:minHeight="48dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Коллекции -->
        <TextView
            android:id="@+id/collectionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Коллекции:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Кнопка для выбора коллекций -->
        <Button
            android:id="@+id/collectionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать коллекции"
            android:textSize="14sp"
            android:minHeight="48dp"
            android:backgroundTint="@color/primary_blue_light"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Текст для отображения выбранных коллекций -->
        <TextView
            android:id="@+id/selectedCollectionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не выбрано"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Дополнительная информация -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дополнительная информация:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/genreEditText"
            style="@style/Widget.App.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:hint="Жанр"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/seasonsEditText"
                style="@style/Widget.App.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_dark"
                android:hint="Сезоны"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/episodesEditText"
                style="@style/Widget.App.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_dark"
                android:hint="Эпизоды"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:minHeight="48dp" />

        </LinearLayout>

        <!-- Изображение -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изображение:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать изображение"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/seriesImageView"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="Изображение сериала"
            android:layout_marginBottom="16dp" />

        <!-- Заметки -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заметки:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/notesEditText"
            style="@style/Widget.App.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дополнительная информация"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:minLines="3"
            android:minHeight="120dp"
            android:layout_marginBottom="24dp" />

        <!-- Медиафайлы -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Медиафайлы:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/addMediaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить фото/видео"
            android:textSize="14sp"
            android:minHeight="48dp"
            android:backgroundTint="@color/primary_blue_light"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mediaRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Кнопки действий -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить сериал"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
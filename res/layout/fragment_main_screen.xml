<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="100dp"
    tools:context=".ui.screens.MainScreen">

    <!-- Заголовок с иконкой поиска -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:text="Нет, лакорн смотреть"
            android:textColor="@color/primary_blue"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Иконка поиска -->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="46dp"
            android:paddingTop="7dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Поиск"
            android:src="@drawable/ic_baseline_search_24"
            android:tint="@color/primary_blue" />

    </LinearLayout>

    <!-- Красивый блок с кнопками -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/background_white"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Первая строка кнопок -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/createCollectionButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Создать\nколлекцию"
                    android:textSize="14sp"
                    android:minHeight="56dp"
                    android:backgroundTint="@color/primary_blue"
                    android:textColor="@color/white"
                    android:drawableTop="@drawable/ic_baseline_add_24"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <Button
                    android:id="@+id/addSeriesButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Добавить\nсериал"
                    android:textSize="14sp"
                    android:minHeight="56dp"
                    android:backgroundTint="@color/primary_blue"
                    android:textColor="@color/white"
                    android:drawableTop="@drawable/ic_baseline_queue_24"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Вторая строка кнопок -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/allCollection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/primary_blue_light"
                    android:drawableStart="@drawable/ic_baseline_settings_24"
                    android:drawablePadding="8dp"
                    android:minHeight="48dp"
                    android:text="Коллекции"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/allSeriesButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/primary_blue_light"
                    android:drawableStart="@drawable/ic_baseline_list_24"
                    android:drawablePadding="8dp"
                    android:minHeight="48dp"
                    android:text="Сериалы"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Раздел коллекций -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/collectionsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Мои коллекции"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark" />

        <TextView
            android:id="@+id/collectionsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/counter_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Если коллекций нет -->
    <TextView
        android:id="@+id/noCollectionsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Коллекций пока нет. Создайте первую!"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- Список коллекций -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/backupSettingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Резервное копирование"
        android:textSize="10sp"
        android:minHeight="10dp"
        android:backgroundTint="@color/transparent_black"
        android:textColor="@color/white"
        style="@style/Widget.MaterialComponents.Button"
        android:drawableStart="@drawable/ic_backup"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white" />

</LinearLayout>
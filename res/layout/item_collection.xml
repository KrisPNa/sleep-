<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collectionCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:contentDescription="Коллекция"
    app:cardCornerRadius="@dimen/corner_radius_medium"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/background_white"
    app:strokeColor="@color/primary_blue_light"
    app:strokeWidth="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        android:background="?attr/selectableItemBackground">

        <!-- Верхняя строка: название и звездочка избранного -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/collectionNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название коллекции"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue_dark"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Звездочка избранного (только отображение) -->
            <ImageView
                android:id="@+id/favoriteStar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_baseline_star_24"
                android:visibility="gone"
                android:contentDescription="Избранная коллекция" />

        </LinearLayout>

        <!-- Индикатор цвета коллекции -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/primary_blue"
            android:visibility="visible" />

        <TextView
            android:id="@+id/seriesCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 сериалов"
            android:textSize="14sp"
            android:textColor="@color/text_gray" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
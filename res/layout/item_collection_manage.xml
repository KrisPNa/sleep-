<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collectionCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Индикатор цвета коллекции -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="12dp"
            android:background="@color/primary_blue"
            android:visibility="visible" />

        <!-- Верхняя строка: название, звездочка и кнопка меню -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/collectionNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название коллекции"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <!-- Звездочка избранного -->
            <ImageView
                android:id="@+id/favoriteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_star_border_24"
                android:contentDescription="Добавить в избранное"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <!-- Кнопка меню (три точки) -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Меню действий"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Счетчик сериалов в коллекции -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сериалов в коллекции:"
                android:textSize="14sp"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/seriesCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/counter_background_small"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>